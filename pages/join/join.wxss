/* pages/mark_detail/mark_detail.wxss */
.box {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin: 0 20rpx;
  overflow: hidden;
  box-sizing: border-box;
}
.card {
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  margin: 8rpx 0;
}
.mark-bd-card-title {
  display: flex;
  height: 100rpx;
  line-height: 90rpx;
}
.icon {
  font-size: 80rpx;
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  border-radius: 50%;
  margin-right: 20rpx;
}
.target-submit {
  height: 90rpx;
  line-height: 90rpx;
  padding: 10rpx 0;
  width: 100%;
  align-items: center;
  background-color: #d18a8f;
  border-radius: 17rpx;
  display: flex;
  justify-content: center;
  margin-bottom: 50rpx;
}

.target-submit text {
  color: #fff;
  font-size: 1.2em;
}
